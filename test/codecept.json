{
  "output": "./test/e2e/output",
  "helpers": {
    "Puppeteer": {
      "url": "http://localhost",
      "show": false, 
      "windowSize" : "1024x768"
    }
  },
  "include": {
    "I": "./test/e2e/steps/steps.js"
  },
  "mocha": {},
  "bootstrap": false,
  "teardown": null,
  "hooks": [],
  "gherkin": {
    "features": "./test/e2e/features/*.feature",
    "steps": [
      "./test/e2e/steps/steps.js"
    ]
  },
  "plugins": {
    "screenshotOnFail": {
      "enabled": true
    },
    "allure": {
      "enabled": true
    }
  },
  "tests": "./test/e2e/features/*.js",
  "timeout": 10000,
  "name": "POC_Codecept"
}